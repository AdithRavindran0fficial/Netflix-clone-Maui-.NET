<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Netflix_clone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:Netflix_clone.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454"
    Title="Netflix_clone">

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="hometab"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage" />
        <ShellContent
          Title="Games"
          Icon="game"
          ContentTemplate="{DataTemplate Pages:MainPage}"
          Route="MainPage1" />
        <ShellContent
        Title="New &amp; hot"
        Icon="brand_netflix"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage2" />
        <ShellContent
        Title="Downloads"
        Icon="download"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage3" />
    </TabBar>

</Shell>
